<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JavaScripts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script>
        function pp() {
            var a = confirm("Really want to resize")
            if (a) {
                document.bgColor = 'red'
            }
            else {
                document.bgColor = 'green'
            }
        }

        function wel() {
            document.bgColor = 'yellow'
            document.fgColor = 'blue'
        }
    </script>
</head>
<body onload="wel()" onresize="pp()">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">JavaScripts</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - JavaScripts - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/Basics.js" asp-append-version="true"></script>*@
    @*<script src="~/js/VarAndLet.js"></script>*@
    @*<script src="~/js/Generator.js"></script>*@
    @*<script src="~/js/Function.js"></script>*@
    @*<script src="~/js/ClassAndObject.js"></script>*@
    @*<script src="~/js/ThisKeyword.js"></script>*@
    @*<script src="~/js/Prototype.js"></script>*@
    @*<script src="~/js/Hoisting.js"></script>*@
    @*<script src="~/js/IIFE.js"></script>*@
    <script src="~/js/ErrorHandling.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
